<?xml version="1.0" encoding="utf-8"?>
<UXML
        xmlns="UnityEngine.UIElements"
        xmlns:e="UnityEditor.UIElements"
>
    <VisualElement class="container">
        <Label text="Dialogue Graph" class="heading"/>
        <e:ObjectField name="dlogObjectField" label="Dialogue Graph Object" allow-scene-objects="false"/>
        <Button name="clearData" text="Clear data cache" tooltip="Warning! This will clear all assigned properties from every Dlog Object"/>
        <VisualElement name="propertiesContainer">
            <Foldout class="container-inner" text="Checks">
                <VisualElement name="checkList"/>
            </Foldout>
            <Foldout class="container-inner" text="Triggers">
                <VisualElement name="triggerList"/>
            </Foldout>
            <Foldout class="container-inner" text="Actors">
                <VisualElement name="actorList"/>
            </Foldout>
        </VisualElement>
        <Label name="invalidContainer"
               text="Please assign a valid Dialogue Object"
               class="error-text hidden"/>
    </VisualElement>


</UXML>